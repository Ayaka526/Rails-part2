<%= render 'users/same', book:@post, books: @books, user: @user %>


 	<div class="col-xs-9">
        <h2>Users</h2>
        <table class= "table">
            <thead>

              <tr>
                <th class ="user-image">image</th>
                <th class ="user-name">name</th>
                <th class ="user-contents"></th>
              </tr>
            </thead>

            <tbody>
               <% @users.each do |user| %>
                 <tr class ="user-item">
                    <td class="user-account"><%= attachment_image_tag user, :image, fallback: "no-image.jpg",size: '40x40' %></td>
                    <td class="user-name"><%= user.name %></td>

                    <td class="book-contents">
                     <%=link_to "Show",  user_path(user.id), class:"user_#{user.id}" %>
                    </td>
                 </tr>

               <% end %>
            </tbody>
        </table>
     </div>
