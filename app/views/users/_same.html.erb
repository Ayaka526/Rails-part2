
  <div class="container">
        <p id="notice"></p>
            <div class="row">
              <div class="col-xs-3 sidenav">

                      <h2>User info</h2>

                       <%= attachment_image_tag @user, :image, fallback: "no-image.jpg",size: '100x100' %>
                     <table class="table">
                       <tbody>
                         <tr>
                            <th>name</th>
                           <th class="profile-name"><%= user.name %></th>
                         </tr>
                         <tr class ="profile-item">
                           <th>introduction</th>
                           <th><%= user.introduction %></th>
                         </tr>
                       </tbody>
                     </table>


                      <% if user.id == current_user.id %>
                        <%= link_to "", edit_user_path(user.id),class: "btn btn-default glyphicon glyphicon-wrench btn-block edit_user_#{user.id}"%>
                      <% else %>_
                         <%= link_to "", user_path(current_user), class: "btn btn-default glyphicon glyphicon-wrench btn-block user_#{current_user.id}"  %>
                      <% end %>

                    <h2>New book</h2>
                      <%= form_for @book, url: books_path(@book) do |f| %>
                      <label for="book_title">Title</label>
                      <br>
                      <%= f.text_field :title, :size=>"36", class: "book_title"%>
                      <br>
                      <label for="book_opinion">Opinion</label>
                      <br>
                      <%= f.text_area :opinion ,rows: 2,cols: 35, class: "book_body"%>
                      <div class="actions">
                      <%= f.submit 'Create Box', class: "btn btn-primary btn-block" %>

                      </div>
                      <% end %>
              </div>

