<%= render 'users/same', book:@book, books: @books, user: current_user %>


<div class="col-xs-9">
    <%= flash[:notice] %>
                <% if @book.errors.any? %>
                 <div id="error_explanation" class="alert alert-danger">
                <ul><h3><%=@book.errors.count%>errors prohibited this obj from being saved:</h3>
                 <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                          <% end %>
                           </ul>
                            </div>
                            <% end %>
        <h2>Books</h2>
        <table class= "table table-hover table-inverse">
            <thead>

              <tr>
                <th class ="book-image"></th>
                <th class ="book-title">Title</th>
                <th class ="book-opinion">Opinion</th>
              </tr>
            </thead>

            <tbody>
               <% @books.each do |book| %>
                 <tr class ="book-item">
                    <td class="user-book">
                        <%= link_to user_path(book.user), class: "user_#{book.user.id}" do %>
                        <%= attachment_image_tag book.user, :image, fallback: "no-image.jpg",size: '40x40' %>
                        <% end %>
                     </td>

                    <td class="title-book"><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>

                    <td class="opinion-book"><%= book.opinion %></td>
                 </tr>

               <% end %>
            </tbody>
        </table>
     </div>