
<div class="container">
	<p id="notice"></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">

	<h1>Editing Book</h1>

				<%= form_for(@book) do |f| %>

				<div class="field row">
				<h5><strong>Title</strong></h5>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
				</div>
				<div class="field row">
				<h5><strong>Opinion</strong></h5>
				<%= f.text_area :opinion, class: "col-xs-12 book_body" %>
				</div>

				<div class="actions row">
				<button type="submit" class= "btn btn-primary btn-block">Update Book</button>
				</div>
				<br>
				<%= link_to "Show", book_path(@book),class: "book_#{@book.id}" %> |
				<%= link_to "Back", books_path, class: "back"%>


				<% end %>
			</div>
		</div>
</div>
